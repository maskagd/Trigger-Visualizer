{
	"geode": "4.10.0",
	"gd": {
		"win": "2.2074",
		"android": "2.2074",
		"mac": "2.2074",
		"ios": "2.2074"
	},
	"id": "maskagd.shader_visualizer",
	"name": "Trigger Visualizer",
	"version": "v1.4.0",
	"developer": "maskagd",
	"description": "Trigger Visualizer",
	"resources": {
		"sprites": [
			"resources/*.png"
		]
	},
	"links": {
        "source": "https://github.com/maskag/Shader-Visualizer"
    },
	"tags": ["editor", "offline", "customization"],
	"settings": {
        "set-title": {
            "type": "title",
            "name": "texture settings"
        },
        "new-start": {
            "type": "custom:maskagd.shader_visualizer/sprite-switch",
            "name": "Start Pos texture",
            "description": "Choose between default or custom start pos",
            "default": false,
            "spr1": "start.png", 
            "spr2": "startgd.png"
        },
        "new-shake": {
            "type": "custom:maskagd.shader_visualizer/sprite-switch",
            "name": "Shake texture",
            "description": "Choose shake texture",
            "default": false,
            "spr1": "shake.png",
            "spr2": "shakegd.png"
        },
        "color-cam": {
            "type": "custom:maskagd.shader_visualizer/sprite-switch",
            "name": "Camera color texture",
            "description": "Choose camera color texture",
            "default": false,
            "spr1": "Coffset.png",
            "spr2": "offset.png"
        },
        "color-stop": {
            "type": "custom:maskagd.shader_visualizer/sprite-switch",
            "name": "Area stop color texture",
            "description": "Choose area stop texture",
            "default": false,
            "spr1": "astop.png",
            "spr2": "astopc.png"
        },
        "trg-title": {
            "type": "title",
            "name": "Enable Trigger Textures"
        },
        "do-default": {
            "type": "custom:maskagd.shader_visualizer/sprite-switch",
            "name": "Object edit triggers texture",
            "description": "Select texture style",
            "default": true,
            "spr1": "movegd.png",
            "spr2": "move.png"
        },
        "do-logic": {
            "type": "custom:maskagd.shader_visualizer/sprite-switch",
            "name": "logical triggers texture",
            "description": "Select texture style",
            "default": true,
            "spr1": "persgd.png",
            "spr2": "pers.png"
        },
        "do-colis": {
            "type": "custom:maskagd.shader_visualizer/sprite-switch",
            "name": "collision block texture",
            "description": "Select texture style",
            "default": false,
            "spr1": "colisgd.png",
            "spr2": "colisblock.png"
        },
        "do-shader": {
            "type": "custom:maskagd.shader_visualizer/sprite-switch",
            "name": "Shader triggers texture",
            "description": "Select texture style",
            "default": true,
            "spr1": "colorgd.png",
            "spr2": "color.png"
        },
        "do-area": {
            "type": "custom:maskagd.shader_visualizer/sprite-switch",
            "name": "Area triggers texture",
            "description": "Select texture style",
            "default": true,
            "spr1": "arotategd.png",
            "spr2": "arotate.png"
        },
        "do-cam": {
            "type": "custom:maskagd.shader_visualizer/sprite-switch",
            "name": "Cameras triggers texture",
            "description": "Select texture style",
            "default": true,
            "spr1": "edgegd.png",
            "spr2": "edge.png"
        },
        "dynamic-title": {
            "type": "title",
            "name": "dynamic texture settings"
        },
        "dyn-ui": {
            "type": "custom:maskagd.shader_visualizer/sprite-switch",
            "name": "UI dynamic texture",
            "description": "Select style",
            "default": true,
            "spr1": "ui.png",
            "spr2": "uiset.png"
        },
        "dyn-comp": {
            "type": "custom:maskagd.shader_visualizer/sprite-switch",
            "name": "Item comp dynamic texture",
            "description": "Select style",
            "default": true,
            "spr1": "comp.png",
            "spr2": "comp5.png"
        },
        "dyn-ev": {
            "type": "custom:maskagd.shader_visualizer/sprite-switch",
            "name": "Event dynamic texture",
            "description": "Select style",
            "default": true,
            "spr1": "ev.png",
            "spr2": "evland.png"
        },
        "off-ev": {
            "type": "float",
            "name": "Spacing between event textures",
            "description": "Spacing between textures in an event trigger when the event uses two different actions that do not share a common texture",
            "default": 7.5,
            "min": 0.0,
            "max": 15.0,
            "controls": {
                "arrows": true,
                "arrow-step": 2.0,
                "slider": true,
                "slider-step": 1.0,
                "input": true
            }
        },
        "dyn-sfx": {
            "type": "custom:maskagd.shader_visualizer/sprite-switch",
            "name": "SFX dynamic texture",
            "description": "Select style",
            "default": true,
            "spr1": "sfx.png",
            "spr2": "sfx4.png"
        },
        "sfx2": {
            "type": "float",
            "name": "SFX 1/4",
            "description": "Set the SFX volume so it shows one of the four levels",
            "default": 0.25,
            "min": 0.0,
            "max": 2.0,
            "controls": {
                "arrows": true,
                "arrow-step": 0.1,
                "slider": true,
                "slider-step": 0.1,
                "input": true
            }
        },
        "sfx3": {
            "type": "float",
            "name": "SFX 2/4",
            "description": "Set the SFX volume so it shows two of the four levels",
            "default": 0.50,
            "min": 0.0,
            "max": 2.0,
            "controls": {
                "arrows": true,
                "arrow-step": 0.1,
                "slider": true,
                "slider-step": 0.1,
                "input": true
            }
        },
        "sfx4": {
            "type": "float",
            "name": "SFX 3/4",
            "description": "Set the SFX volume so it shows three of the four levels",
            "default": 0.75,
            "min": 0.0,
            "max": 2.0,
            "controls": {
                "arrows": true,
                "arrow-step": 0.1,
                "slider": true,
                "slider-step": 0.1,
                "input": true
            }
        },
        "sfx5": {
            "type": "float",
            "name": "SFX 4/4",
            "description": "Set the SFX volume so it shows four of the four levels",
            "default": 1.25,
            "min": 0.0,
            "max": 2.0,
            "controls": {
                "arrows": true,
                "arrow-step": 0.1,
                "slider": true,
                "slider-step": 0.1,
                "input": true
            }
        }
    }
}
