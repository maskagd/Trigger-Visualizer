{
	"geode": "4.10.0",
	"gd": {
		"win": "2.2074",
		"android": "2.2074",
		"mac": "2.2074",
		"ios": "2.2074"
	},
	"id": "maskagd.shader_visualizer",
	"name": "Trigger Visualizer",
	"version": "v1.2.0",
	"developer": "maskagd",
	"description": "Trigger Visualizer",
	"resources": {
		"sprites": [
			"resources/*.png"
		]
	},
	"links": {
        "source": "https://github.com/maskag/Shader-Visualizer"
    },
	"tags": ["editor", "offline", "customization"],
	"settings": {
        "trg-title": {
            "type": "title",
            "name": "triggers texture settings"
        },
		"do-default": {
			"type": "bool",
			"name": "Object edit triggers texture",
			"description": "New textures for triggers such as move, pulse, alpha, scale, etc",
			"default": true
		},
		"do-logic": {
			"type": "bool",
			"name": "logical triggers texture",
			"description": "New textures for triggers such as spawn, count, random, collision, etc",
			"default": true
		},
		"do-shader": {
			"type": "bool",
			"name": "Shader triggers texture",
			"description": "New textures for shader triggers",
			"default": true
		},
		"do-area": {
			"type": "bool",
			"name": "Area triggers texture",
			"description": "New textures for area triggers",
			"default": true
		},
		"cam-title": {
            "type": "title",
            "name": "Cameras texture settings" 
        },
		"color-cam": {
			"type": "bool",
			"name": "Default color texture",
			"description": "Restore the camera color to the standard",
			"default": false
		},
		"do-cam": {
			"type": "bool",
			"name": "Cameras triggers texture",
			"description": "New textures for Cameras triggers",
			"default": true
		}
    }
}